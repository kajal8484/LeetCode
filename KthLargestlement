class Solution {
    public int findKthLargest(int[] nums, int k) {
        PriorityQueue<Integer> pq = new PriorityQueue<>(); // min heap

        for (int n : nums) {
            pq.offer(n);
            if (pq.size() > k) {
                pq.poll(); // remove smallest
            }
        }

        return pq.peek(); // kth largest
    }
}
