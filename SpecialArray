class Solution {
    public boolean isArraySpecial(int[] nums) {
        int n=nums.length;

        if(n==1)
        return true;
        int rem1,rem2;
        for(int i=0;i<n-1;i++)
        {
           rem1=nums[i]%2;
           rem2=nums[i+1]%2;
           if(rem1==rem2)
           return false;
        }
        return true;
    }
}
